<div id="cartpro">
  <span class="close" onclick="closeCart()">&times;</span>
  <% for( let i = 0; i < user.products.length; i++ ) { %>
  <div class="listi"><%= user.products[i].name %></div>
  <% } %>
</div>

<script>
  function openCart() {
    document.getElementById('cartpro').style.top = '0px';
    document.getElementById('cartpro').style.right = '0px';
    document.getElementById('main').style.display = 'none';
  }

  function closeCart() {
    document.getElementById('cartpro').style.top = '10000px';
    document.getElementById('cartpro').style.right = '10000px';
    document.getElementById('main').style.display = 'block';
  }
</script>

<style>
  #cartpro {
    position: fixed;
    top: -10000px;
    right: -10000px;
    width: 100vw;
    height: 100vh;
    transition: cubic-bezier(0.075, 0.82, 0.165, 1) 1s;
    background-image: linear-gradient(-45deg, #ffc796 0%, #ff6b95 100%);
  }
  .listi {
    background-color: thistle;
    font-size: 20px;
    padding: 10px;
    margin: 10px;
    border-radius: 4px;
    width: 30vw;
  }
  .close {
    font-size: 30px;
    color: white;
    cursor: pointer;
    position: absolute;
    top: 10px;
    right: 10px;
  }
</style>
